generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  CREATOR   // Admin role but cannot be revoked by other admins
  ADMIN     // Can create stances, justifications, vote, and comment
  DEBATER   // Can create justifications, vote, and comment
  OBSERVER  // May only observe
}

model User {
  id       String  @id @default(cuid())
  email    String  @unique
  username String  @unique
  password String
  profilePicture String @default("")

  participants   Participant[]
  justifications Justification[]
  votes          Vote[]
  comments       Comment[]
  createdDebates Debate[] @relation("DebateCreator")

  @@map("users")
}

model Debate {
  id        String     @id @default(cuid())
  private   Boolean    @default(true)
  started   DateTime   @default(now())
  closed    Boolean    @default(false)

  topicId   Int
  topic     Topic      @relation(fields: [topicId], references: [id])

  creatorId    String
  creator      User     @relation("DebateCreator", fields: [creatorId], references: [id])

  participants Participant[]
  stances      Stance[]
  inviteTokens InviteToken[]

  @@map("debates")
}

model Topic {
  id      Int      @id @default(autoincrement())
  title   String
  debates Debate[]

  @@map("topics")
}

model Stance {
  id             Int             @id @default(autoincrement())
  label          String

  debateId       String          
  debate         Debate          @relation(fields: [debateId], references: [id])

  justifications Justification[]
  participants   Participant[]

  @@map("stances")
}

model Participant {
  id        Int      @id @default(autoincrement())
  userId    String
  debateId  String
  stanceId  Int?

  role      Role     @default(OBSERVER)
  joinedAt  DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])
  debate    Debate   @relation(fields: [debateId], references: [id])
  stance    Stance?  @relation(fields: [stanceId], references: [id])

  @@unique([userId, debateId])

  @@map("participants")
}

model Justification {
  id          Int      @id @default(autoincrement())
  content     String
  createdAt   DateTime @default(now())

  authorId    String
  author      User     @relation(fields: [authorId], references: [id])

  stanceId    Int
  stance      Stance   @relation(fields: [stanceId], references: [id])

  votes       Vote[]
  comments    Comment[] @relation("JustificationComments")

  @@map("justifications")
}

model Vote {
  id              Int      @id @default(autoincrement())
  value           Int

  userId          String
  user            User     @relation(fields: [userId], references: [id])
  createdAt       DateTime @default(now())

  justificationId Int
  justification   Justification @relation(fields: [justificationId], references: [id])

  @@unique([userId, justificationId])

  @@map("votes")
}

model Comment {
  id               Int      @id @default(autoincrement())
  content          String
  createdAt        DateTime @default(now())

  authorId         String
  author           User     @relation(fields: [authorId], references: [id])

  justificationId  Int
  justification    Justification @relation("JustificationComments", fields: [justificationId], references: [id])

  parentId         Int?
  parent           Comment?  @relation("CommentHierarchy", fields: [parentId], references: [id])
  children         Comment[] @relation("CommentHierarchy")

  @@map("comments")
}

model InviteToken {
  id         Int      @id @default(autoincrement())
  token      String   @unique
  debateId   String
  debate     Debate   @relation(fields: [debateId], references: [id])
  createdAt  DateTime @default(now())
  expiresAt  DateTime

  @@map("invite_tokens")
}

